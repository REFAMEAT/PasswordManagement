<Window
    x:Class="REFame.PasswordManagement.App.View.AddUser"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:REFame.PasswordManagement.App.ViewModel"
    x:Name="Window"
    Title="AddUser"
    Width="450"
    Height="250"
    Background="{DynamicResource MaterialDesignPaper}"
    ResizeMode="CanMinimize"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.InputBindings>
        <KeyBinding
            Key="Enter"
            Command="{Binding ButtonCommandCreateUser}"
            CommandParameter="{Binding ElementName=Window}" />
    </Window.InputBindings>
    <Window.DataContext>
        <viewModel:AddUserViewModel />
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Label
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Content="{x:Static Loc.AddUser_LabelAddUser_Content}"
            FontSize="20" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Top"
            Content="{x:Static Loc.AddUser_LabelUsername_Content}"
            FontSize="15" />
        <TextBox
            x:Name="userNameTextBox"
            Grid.Row="1"
            Grid.Column="1"
            Width="200"
            Height="30"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="15"
            Text="{Binding UserName, UpdateSourceTrigger=PropertyChanged}" />

        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Top"
            Content="{x:Static Loc.AddUser_LabelPassword_Content}"
            FontSize="15" />
        <PasswordBox
            x:Name="passwordBox"
            Grid.Row="2"
            Grid.Column="1"
            Width="200"
            Height="30"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="15"
            PasswordChanged="PasswordBox_PasswordChanged" />

        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Top"
            Content="{x:Static Loc.AddUser_LabelRepeatPassword_Content}"
            FontSize="15" />
        <PasswordBox
            x:Name="repeatPasswordBox"
            Grid.Row="3"
            Grid.Column="1"
            Width="200"
            Height="30"
            VerticalAlignment="Top"
            VerticalContentAlignment="Center"
            FontSize="15"
            PasswordChanged="PasswordBox_PasswordChanged" />

        <DockPanel Grid.Row="4" Grid.ColumnSpan="2">
            <Button
                Width="150"
                Margin="2"
                Click="ButtonClose_Click"
                Content="{x:Static Loc.Window_LabelCancel_Content}"
                FontSize="15"
                IsCancel="True"
                Style="{DynamicResource MaterialDesignFlatButton}" />
            <Button
                x:Name="buttonCreateUser"
                Margin="1"
                Command="{Binding ButtonCommandCreateUser}"
                CommandParameter="{Binding ElementName=Window}"
                Content="{x:Static Loc.Window_LabelSave_Content}"
                FontSize="15"
                IsEnabled="{Binding InputOk}" />
        </DockPanel>
    </Grid>

</Window>