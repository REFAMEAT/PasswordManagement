<Window
    x:Class="PasswordManagement.View.Add"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:PasswordManagement.ViewModel"
    Title="Add"
    Width="200"
    Height="300"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:AddViewModel />
    </Window.DataContext>
    <StackPanel>
        <DockPanel>
            <Label
                Width="75"
                Content="{DynamicResource AddDescription}"
                DockPanel.Dock="Left" />
            <TextBox DockPanel.Dock="Right" />
        </DockPanel>
    </StackPanel>
</Window>
