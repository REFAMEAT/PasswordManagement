<Window
    x:Class="PasswordManagement.View.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:PasswordManagement.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModel="clr-namespace:PasswordManagement.ViewModel"
    Title="Settings"
    Width="350"
    Height="200"
    Background="{DynamicResource MaterialDesignPaper}"
    ResizeMode="CanMinimize"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}"
    WindowStyle="ToolWindow"
    mc:Ignorable="d">
    <Window.DataContext>
        <viewModel:SettingsViewModel />
    </Window.DataContext>
    <StackPanel Margin="10">
        <DockPanel>
            <Label
                Width="75"
                Content="{DynamicResource SettingsTheme}"
                DockPanel.Dock="Left" />
            <ComboBox
                DockPanel.Dock="Right"
                ItemsSource="{Binding ThemeItems}"
                SelectedItem="{Binding SelectedTheme}" />
        </DockPanel>
        <DockPanel>
            <Label
                Width="75"
                Content="{DynamicResource SettingsLanguage}"
                DockPanel.Dock="Left" />
            <ComboBox
                DockPanel.Dock="Right"
                ItemsSource="{Binding LanguageItems}"
                SelectedItem="{Binding SelectedLanguage}" />
        </DockPanel>
        <DockPanel>
            <Label
                Width="75"
                Content="{DynamicResource SettingsColor}"
                DockPanel.Dock="Left" />
            <ComboBox
                DockPanel.Dock="Right"
                ItemsSource="{Binding AllowedColors}"
                SelectedItem="{Binding SelectedColor}" />
        </DockPanel>
        <DockPanel Margin="0,10,0,0">
            <Button
                Width="100"
                Content="{DynamicResource AddCancel}"
                DockPanel.Dock="Left"
                Style="{DynamicResource MaterialDesignFlatButton}" />
            <Button
                Command="{Binding ButtonCommandApplySettings}"
                Content="{DynamicResource AddApply}"
                DockPanel.Dock="Right" />
        </DockPanel>
    </StackPanel>

</Window>
